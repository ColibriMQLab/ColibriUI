{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "module": "esnext",
    "jsx": "react-jsx",
    "jsxImportSource": "@emotion/react",
    "moduleResolution": "node",
    "typeRoots": [
      "./@types",
      "./node_modules/@types"
    ],
    "outDir": "./dist/esm",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,    
    /* Type Checking */
    "noImplicitAny": true,
    "strictNullChecks": true,
    "alwaysStrict": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationDir": "./dist/esm",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "emitDeclarationOnly": true,
  },
  "include": [
    "@types",
    "./**/*",
    "./src/**/*",
    "./cypress",
    "./cypress.config.ts"
  ],
  "exclude": [
      "node_modules",
      "dist",
      "src/**/__tests__/**",
      "src/**/*.stories.tsx",
      "src/**/*.test.tsx",
      "src/**/*.test.ts",
  ],
}
