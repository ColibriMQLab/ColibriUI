{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "jsx": "react",
    "moduleResolution": "node",
    "typeRoots": [
      "./@types",
      "./node_modules/@types"
    ],
    "outDir": "./dist/esm",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,    
    /* Type Checking */
    "noImplicitAny": true,
    "strictNullChecks": true,
    "alwaysStrict": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationDir": "./dist/esm",
    "strict": true,
    "noEmit": false,
    "allowSyntheticDefaultImports": true,
    "emitDeclarationOnly": true,
    "isolatedModules": true,
  },
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  },
  "include": ["@types", "./src/**/*"],
  "exclude": [
      "node_modules",
      "dist",
      "cypress/**/*",
      "cypress.config.ts",
      "src/**/*.stories.tsx",
      "src/**/*.cy.tsx",
      "src/**/*.cy.ts",
      "src/**/*.scss",
  ],
}